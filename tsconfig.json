{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@api/*": ["src/api/*"],
      "@config": ["src/config"],
      "@kernel8/*": ["src/kernel8/*"],
      "@kernel9/*": ["src/kernel9/*"],
      "@semantic/*": ["src/semantic_kernel/*"],
      "@uie/*": ["src/uie/*"],
      "@vdb/*": ["src/vdb/*"],
      "@mcp/*": ["src/mcp/*"],
      "@ledger/*": ["src/ledger/*"],
      "@runtime/*": ["src/runtime/*"],
      "@telemetry/*": ["src/telemetry/*"]
    }
  },
  "include": ["src", "tests"]
}
