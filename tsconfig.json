{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@api/*": ["src/api/*"],
      "@config": ["src/config"],
      "@kernel8/*": ["src/kernel8/*"],
      "@kernel9/*": ["src/kernel9/*"],
      "@semantic/*": ["src/semantic_kernel/*"],
      "@uie/*": ["src/uie/*"],
      "@vdb/*": ["src/vdb/*"],
      "@mcp/*": ["src/mcp/*"],
      "@ledger/*": ["src/ledger/*"],
      "@runtime/*": ["src/runtime/*"],
      "@telemetry/*": ["src/telemetry/*"],
      "@auth/*": ["src/auth/*"],
      "@blobgrid/*": ["src/blobgrid/*"],
      "@edge/*": ["src/edge/*"],
      "@irx/*": ["src/irx/*"],
      "@grid/*": ["src/grid/*"],
      "@playground/*": ["src/playground/*"],
      "@capsules/*": ["src/capsules/*"],
      "@genesis/*": ["src/genesis/*"],
      "@mesh/*": ["src/mesh/*"],
      "@ops/*": ["src/ops/*"],
      "@vvm/*": ["src/vvm/*"],
      "@apix/*": ["src/apix/*"],
      "@infinity/*": ["src/infinity/*"],
      "@federation/*": ["src/federation/*"],
      "@ai/*": ["src/ai/*"],
      "@chat/*": ["src/chat/*"],
      "@flow/*": ["flow/src/*"]
    }
  },
  "include": ["src", "flow/src", "tests"]
}
