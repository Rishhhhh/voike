{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@api/*": ["src/api/*"],
      "@config": ["src/config"],
      "@kernel8/*": ["src/kernel8/*"],
      "@kernel9/*": ["src/kernel9/*"],
      "@semantic/*": ["src/semantic_kernel/*"],
      "@uie/*": ["src/uie/*"],
      "@vdb/*": ["src/vdb/*"],
      "@mcp/*": ["src/mcp/*"],
      "@ledger/*": ["src/ledger/*"],
      "@runtime/*": ["src/runtime/*"],
      "@telemetry/*": ["src/telemetry/*"],
      "@auth/*": ["src/auth/*"],
      "@blobgrid/*": ["src/blobgrid/*"],
      "@edge/*": ["src/edge/*"],
      "@irx/*": ["src/irx/*"],
      "@grid/*": ["src/grid/*"],
      "@playground/*": ["src/playground/*"],
      "@capsules/*": ["src/capsules/*"],
      "@genesis/*": ["src/genesis/*"],
      "@mesh/*": ["src/mesh/*"],
      "@ops/*": ["src/ops/*"],
      "@vvm/*": ["src/vvm/*"],
      "@apix/*": ["src/apix/*"],
      "@infinity/*": ["src/infinity/*"],
      "@federation/*": ["src/federation/*"],
      "@ai/*": ["src/ai/*"],
      "@chat/*": ["src/chat/*"],
      "@flow/*": ["dist/flowlib/*"],
      "@vasm/*": ["vasm/src/*"],
      "@vpkg/*": ["src/vpkg/*"],
      "@env/*": ["src/env/*"],
      "@orchestrator/*": ["src/orchestrator/*"],
      "@agents/*": ["src/agents/*"],
      "@onboard/*": ["src/onboard/*"],
      "@snrl/*": ["src/snrl/*"],
      "@hypermesh/*": ["src/hypermesh/*"],
      "@trust/*": ["src/trust/*"],
      "@ingestion/*": ["src/ingestion/*"],
      "@hybrid/*": ["src/hybrid/*"],
      "@streams/*": ["src/streams/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["tests", "dist", "node_modules"]
}
